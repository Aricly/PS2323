@page
@model ScrapeList.Pages.ProjectionScaffold.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Projection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Projection.ProjectionID" />
            <div class="form-group">
                <label asp-for="Projection.MaterialID" class="control-label"></label>
                <select asp-for="Projection.MaterialID" class="form-control" asp-items="ViewBag.MaterialID"></select>
                <span asp-validation-for="Projection.MaterialID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projection.ProjectedDate" class="control-label"></label>
                <input asp-for="Projection.ProjectedDate" class="form-control" />
                <span asp-validation-for="Projection.ProjectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projection.ProjectedPrice" class="control-label"></label>
                <input asp-for="Projection.ProjectedPrice" class="form-control" />
                <span asp-validation-for="Projection.ProjectedPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
